<?xml version="1.0"?>

    <RelativeLayout android:background="#E8EAF6" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="end" android:textSize="24sp" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:text="Calvin Chitava" android:id="@+id/lblQuestion"/>

    <ImageView android:layout_height="160dp" android:layout_width="match_parent" android:id="@+id/imgCalvin" android:src="@drawable/calvinn"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="15sp" android:layout_alignParentRight="true" android:text="calvin.paperboy1@googlemail.com" android:id="@+id/txtemailaddress" android:padding="10dp" android:layout_margin="30sp" android:layout_below="@id/lblQuestion"/>

    <ImageView android:layout_height="40dp" android:layout_width="wrap_content" android:id="@+id/imgEmail" android:src="@drawable/email" android:layout_margin="15sp" android:layout_below="@+id/lblQuestion"/>

    <ImageView android:layout_height="60dp" android:layout_width="wrap_content" android:id="@+id/imgBirthday" android:src="@drawable/birthday" android:layout_margin="20dp" android:layout_below="@+id/lblQuestion" android:layout_alignParentLeft="true"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20sp" android:layout_alignParentRight="true" android:text="14-July-1979" android:id="@+id/textbirthday" android:padding="15dp" android:layout_below="@+id/txtemailaddress"/>

    <ImageView android:layout_height="50dp" android:layout_width="wrap_content" android:id="@+id/imglocation" android:src="@drawable/location" android:layout_below="@id/imgBirthday" android:layout_alignParentLeft="true"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="30sp" android:layout_alignParentRight="true" android:text="Bath Spa" android:id="@+id/textlocation" android:padding="20dp"/>

</RelativeLayout>